<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/user_container"
    style="@style/container">

    <LinearLayout
        android:id="@+id/top_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1.5"
            android:src="@drawable/user_profile_avatar"
            tools:srcCompat="@drawable/user_profile_avatar" />

        <LinearLayout
            android:id="@+id/user_friends_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="center"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_friends"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="418"
                android:textStyle="bold"
                style="@style/TextSmall" />
            <TextView
                android:id="@+id/user_friends_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Friends"
                style="@style/TextSmall" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/user_groups_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:id="@+id/user_groups"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23"
                android:textStyle="bold"
                style="@style/TextSmall" />
            <TextView
                android:id="@+id/user_groups_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Groups"
                style="@style/TextSmall"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="@dimen/spacing_small">
        <TextView
            android:id="@+id/user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mauricio Poveda"
            style="@style/Headline3" />
        <TextView
            android:id="@+id/user_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/user_description"
            android:textSize="16sp"
            android:textStyle="normal"
            style="@style/Paragraph"/>
        <TextView
            android:id="@+id/user_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:text="Placeholder text"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:orientation="vertical">
        <Button
            android:id="@+id/user_profile_edit_cta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Profile"
            style="@style/ButtonGhost" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/lighter_gray_3"
        android:layout_height="wrap_content"
        android:padding="@dimen/spacing_medium"
        android:orientation="vertical">
        <TextView
            android:id="@+id/user_complete_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Complete your profile"
            style="@style/Headline5"/>
        <TextView
            android:id="@+id/user_complete_profile_steps"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_unit"
            android:text="1 of 2 completed"
            style="@style/Paragraph"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:background="@color/lighter_gray_2"
            android:layout_height="wrap_content"
            android:padding="@dimen/spacing_medium"
            android:orientation="vertical">
        </LinearLayout>
    </LinearLayout>

</LinearLayout>