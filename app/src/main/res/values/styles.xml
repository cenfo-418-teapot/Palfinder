<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="mainTitle" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="subtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>

    <style name="view_title" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Generic styles -->
    <!-- Containers -->
    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingBottom">16sp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Typography -->
    <style name="Title">
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/primary</item>
    </style>

    <style name="Headline1">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Headline2">
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Headline3">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Headline4">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Headline5">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Headline6">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Paragraph">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Link">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">@color/secondaryDark</item>
    </style>

    <!-- Buttons -->
    <style name="ButtonPrimary" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonSecondary" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:backgroundTint">@color/highlight</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="ButtonGhost" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- Card View -->
    <style name="CardDefault" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="contentPadding">@dimen/spacing_medium</item>
    </style>

    <!-- User Profile specific styles -->
    <style name="user_name">
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Chips-->
    <style name="Chip" parent="Widget.MaterialComponents.Chip.Filter">
        <item name="chipBackgroundColor">@drawable/chip_bg</item>
        <item name="android:textColor">@drawable/chip_txt</item>
    </style>

    <style name="Chip.Choice" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="closeIconTint">@color/primaryDark</item>
        <item name="android:checked">true</item>
        <item name="closeIconEnabled">true</item>
        <item name="closeIconVisible">true</item>
        <item name="android:closeIcon">@drawable/ic_label_off</item>
    </style>

    <style name="Chip.Default" parent="Chip">
        <item name="chipStrokeColor">@color/secondary</item>
        <item name="chipStrokeWidth">@dimen/space_unit</item>
    </style>

    <!--  Outline   -->
    <style name="OutlinePrimary">
        <item name="android:background">@drawable/outline_rectangle</item>
    </style>
    <style name="OutlineSecondary">
        <item name="android:background">@drawable/outline_rectangle_dark</item>
    </style>
</resources>
