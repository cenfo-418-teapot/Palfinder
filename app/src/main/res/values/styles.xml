<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="mainTitle" parent="TextAppearance.AppCompat.Display3">
        <item name="android:textSize">48sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="subtitle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginTop">@dimen/text_margin</item>
    </style>
    <style name="view_title" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/primary</item>
    </style>

    <!-- Generic styles -->
    <style name="container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingStart">12sp</item>
        <item name="android:paddingTop">16sp</item>
        <item name="android:paddingEnd">12sp</item>
        <item name="android:paddingBottom">16sp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- User Profile specific styles -->
    <style name="user_name">
        <item name="android:paddingTop">8sp</item>
        <item name="android:paddingBottom">8sp</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>